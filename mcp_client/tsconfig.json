{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "lib": ["ES2022"],
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "checkJs": false,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }